<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Row Layout for Titles and Number -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Column for Hymn Number -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="3dp">

            <!-- Hymn Number -->
            <TextView
                android:id="@+id/tvHymnNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hymn Number"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="end"/>

        </LinearLayout>

        <!-- Column for Titles -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <!-- Hymn Title -->
            <TextView
                android:id="@+id/tvHymnTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hymn Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <!-- Yoruba Title -->
            <TextView
                android:id="@+id/yorubaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yoruba Title"
                android:textSize="18sp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey" />

</LinearLayout>
